{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Railweb Intake File",
  "type": "object",
  "required": ["id", "title", "source", "items"],
  "properties": {
    "id": {"type": "string", "minLength": 1},
    "title": {"type": "string"},
    "description": {"type": "string"},
    "source": {
      "type": "object",
      "required": ["name", "url", "version"],
      "properties": {
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"},
        "version": {"type": "string"},
        "citation": {"type": "string"}
      },
      "additionalProperties": false
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "value"],
        "properties": {
          "type": {"type": "string", "enum": ["requirement", "note", "conversion"]},
          "value": {},
          "id": {"type": "string"}
        },
        "additionalProperties": false
      }
    },
    "metadata": {"type": "object"}
  },
  "additionalProperties": false
}
